@page
@model WebShop.UI.Pages.OrderModel
@using Microsoft.AspNetCore.Http;
<p>Using: @Model.custAccess.LoadById((int)HttpContext.Session.GetInt32("CustomerId")).CustomerName</p>


<h1>Orders</h1>
@foreach (var cart in Model.Orders)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    Product
                </th>
                <th scope="col">
                    Price
                </th>
                <th scope="col">
                    Paid
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in cart.Products)
            {
            <tr>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.ProductPrice.ToString("C")
                </td>
                <td>
                    @cart.IsPaid
                </td>

            </tr>
            }


        </tbody>

    </table>
            }
<p>Payment Option: CardNumber: @Model.cardAccess.LoadById((int)HttpContext.Session.GetInt32("CustomerId")).CardNumber</p>
<button class="btn btn-primary">Pay</button>


